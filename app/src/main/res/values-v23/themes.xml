<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Social_App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#455cde</item>
        <item name="colorAccent">#c2bdbf</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#D3D3D3</item>
        <item name="colorControlActivated">#FFD700</item>
    </style>


    <!-- Light mode -->
    <!-- Screen background if light mode on-->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>


    <!--Text background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <!-- Button background if light mode on-->
    <style name="BUTTON">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">#FFF</item>
    </style>


    <style name="ImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">#FFF</item>
        <item name="android:tint">@android:color/black</item>  <item name="android:textColor">#000</item>
    </style>


    <style name="Like" parent="@android:style/Widget.ImageButton">
        <item name="android:background">#FFF</item>
        <item name="android:tint">@color/red</item>  <item name="android:textColor">@color/red</item>
    </style>
</resources>
